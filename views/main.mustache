<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="main.css">
    <title>User directory</title>
  </head>
  <body>
    <h1>Index</h1>
    <hr>
    <div class="container">

  <!--Users profile - Index -->
      {{#users}}
      <div class="inner_container">
        <div class="img_avatar">
          <img src={{avatar}} alt="">
        </div>
        <div class="details">
          <h3>{{name}}</h3>
          {{#job}}
          <p>{{job}} {{company}}</p>
          {{/job}}
          {{^job}}
          <p class="hire">Available for hire</p>
          {{/job}}
        </div>
      </div>
      {{/users}}
    </div>

<!-- A user with all their data -->
    <p><h2> User with all their data || user available for hiring</h2></p>
    <hr>

    {{#users}}
    {{#address}}
    {{#university}}
    <div class="details_user">
      <div class="img_user">
        <p><img src="{{avatar}}" alt="user"></p>
        <p><b>Educations</b></p>
        <p><b>Skills</b></p>
      </div>
      <div class="cls_info">
        <h1>{{name}}</h1>
        {{#job}}<p>{{#city}}{{city}},{{/city}}{{country}} | {{job}}, {{company}}</p>{{/job}}
        {{^job}}<p class="hire">Available for hire</p>{{/job}}
        <p>{{email}} | {{phone}}</p>
        <p>{{university}}</p>
        <p>{{skills}}</p>
      </div>
    </div>
    {{/university}}
    {{/address}}
    {{/users}}


    <p><h2>Users missing educational and city data</h2></p>
    <hr>
    {{#users}}
      {{^university}}
      {{^city}}
      <div class="details_user">
        <div class="img_user">
          <p><img src="{{avatar}}" alt="user"></p>
          <p><b>Skills</b></p>
        </div>
        <div class="cls_info">
          <h1>{{name}}</h1>
          {{#address}}
          {{#job}}
          <p>{{country}} | {{job}}, {{company}}</p>
          {{/job}}
          {{/address}}
          <p>{{email}} | {{phone}}</p>
          <p>{{#university}}{{university}}{{/university}}</p>
          <p>{{skills}}</p>
        </div>
        </div>
      {{/city}}
      {{/university}}
    {{/users}}
  </body>
</html>
